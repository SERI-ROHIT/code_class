    int n;
    cout << "Enter the number of rows: ";
    cin >> n;

    int row = n;
    while (row >= 1) {
        int col = 1;
        while (col <= row) {
            cout << "*";
            col=col+1;
        }
        cout << endl;
        row=row-1;
    }





